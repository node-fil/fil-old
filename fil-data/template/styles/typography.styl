body
  font-family "Roboto", serif
  font-size 14px
  line-height 22px

a, a:visited
  color $accent

h1, h2, h3, h4, h6, h6
  &, & a, & a:visited
    margin 0
    font-weight 400
    color $text_primary
    text-decoration none
    font-family "Roboto", sans-serif
    font-size 24px

h2
  &, & a, & a:visited
    font-size 16px

p
  margin-bottom 22px
