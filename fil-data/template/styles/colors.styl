$background_body = #FAFAFA
$background_default = #FFFFFF
$background_primary = #3F51B5
$background_secondary = #303F9F

$accent = #FF9800

$text_default = rgba(255,255,255,1)
$text_primary = rgba(0,0,0,.87)
$text_secondary = rgba(0,0,0,.54)

// Material
primary-block()
  background-color $background_primary
  color $text_default

secondary-block()
  background-color $background_secondary
  color $text_default

accent-block()
  background-color $accent
  color $text_default


