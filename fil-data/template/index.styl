html
  font-family: "PT Sans", sans-serif

h1, h2, h3
  font-size 30px
  margin: 10px 0

.post.card
  p
    margin-bottom: 20px
  img
    &.active
      max-height none
      max-width none
      display initial

    max-height 400px
    &.center
      max-width: 100%
      display: block
    &.left
      float: left
      max-width 30%
    &.right
      float: right
      max-width 30%
